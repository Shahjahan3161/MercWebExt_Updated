@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model MercWebExt.Models.DataBase.InductionQuestion

@{
    ViewBag.Title = "Edit Question";
    Layout = "_Layout";
}

<div class="container">
    <h2>Edit Question</h2>
    <form asp-action="EditDriverInduction">
        <div class="form-group">
@*             <label asp-for="Qid"></label>
 *@            <input type="hidden" asp-for="Qid" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Qnumber"></label>
            <input asp-for="Qnumber" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Question"></label>
            <input asp-for="Question" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AnswerLabel1"></label>
            <input asp-for="AnswerLabel1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AnswerLabel2"></label>
            <input asp-for="AnswerLabel2" class="form-control" />
        </div>
        <div class="form-group">
            @* <label asp-for="AnswerLabel3"></label> *@
            <input type="hidden" asp-for="AnswerLabel3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="isCorrectAnswer">Select Correct Answer</label>
            <select asp-for="isCorrectAnswer" class="form-control">
                <option value="1">TRUE</option>
                <option value="2">FALSE</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="IsActivated"></label>
            <input type="hidden" asp-for="IsActivated" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <input asp-for="Category" class="form-control" readonly />
        </div>
        <div class="form-group">
            @* <label asp-for="FilePath"></label> *@
            <input type="hidden" asp-for="FilePath" class="form-control" />
        </div>
        <div class="form-group">
            @* <label asp-for="FileName"></label> *@
            <input type="hidden" asp-for="FileName" class="form-control" />
        </div>
        <div class="form-group">
            @* <label asp-for="IsNotUseFile"></label> *@
            <input type="hidden" asp-for="IsNotUseFile" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
