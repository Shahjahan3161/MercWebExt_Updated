@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model MercWebExt.Models.DataBase.InductionQuestion

@{
    ViewBag.Title = "Add Question";
    Layout = "_Layout";
}

<div class="container">
    <h2>Add New Visitor Question</h2>

    <!-- Set enctype to handle file uploads -->
    <form asp-action="AddVisitorInductionQuestion" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Question"></label>
            <input asp-for="Question" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AnswerLabel1"></label>
            <select asp-for="AnswerLabel1" class="form-control">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="AnswerLabel2"></label>
            <select asp-for="AnswerLabel2" class="form-control">
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="AnswerLabel3"></label>
            <select asp-for="AnswerLabel3" class="form-control">
                <option value="NA">N/A</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-control">
                <option value="Visitor">Visitor</option>
            </select>
        </div>

        <!-- File Upload Section -->
        <div class="form-group">
            <label for="fileUpload">Upload File</label>
            <input type="file" class="form-control-file" id="fileUpload" name="uploadedFile" />
        </div>
        <div class="form-group">
            <label asp-for="isCorrectAnswer">Select Correct Answer</label>
            <select asp-for="isCorrectAnswer" class="form-control">
                <option value="1">TRUE</option>
                <option value="2">FALSE</option>
            </select>
        </div>
        <!-- Hidden fields to send as null -->
        <input type="hidden" asp-for="FilePath" value="" />
        <input type="hidden" asp-for="FileName" value="" />
        <input type="hidden" asp-for="IsNotUseFile" value="" />
        <input type="hidden" asp-for="IsActivated" value="true" />
        <input type="hidden" asp-for="Qnumber" value="" />

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
