@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Applicant List";
    Layout = "_Layout";
}

<h2 class="my-4">@ViewData["Title"]</h2>
<div class="container">
    <div class="table-responsive">
        <table id="applicantTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Driver Email</th>
                    <th>Driver Mobile</th>
                    <th>Rego Number</th>
                    <th>Date Created</th>
                    <th>User ID</th>
                    <th>Type</th>
                    <th>Company</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var applicant in Model)
                {
                    <tr>
                        <td>@applicant.FirstName</td>
                        <td>@applicant.LastName</td>
                        <td>@applicant.DriverEmail</td>
                        <td>@applicant.DriverMobile</td>
                        <td>@applicant.RegoNumber</td>
                        <td>@applicant.DateCreated?.ToString("yyyy-MM-dd")</td>
                        <td>@applicant.UserId</td>
                        <td>@applicant.Company</td>
                        <td>@applicant.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#applicantTable').DataTable();
        });
    </script>
}
